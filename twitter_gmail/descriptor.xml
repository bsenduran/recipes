<metadata>
    <overview>
        <name>Send Tweets to email</name>
        <version>1.0.0</version>
        <description>Find tweets for a given hash tag and send them to configured email</description>
        <thumbnail>thumb.png</thumbnail>
        <banner>banner.png</banner>
    </overview>

    <ingredient>
        <connectordisplayname>Twitter</connectordisplayname>
        <connectorname>twitter</connectorname>
        <operation>Set Twitter Details</operation>
        <icon>twitter.png</icon>
        <parametersdisplayname>Hash tag, Language, Number of Result</parametersdisplayname>
        <parametersname>search,lang,count</parametersname>
        <parameterseg>#happy,en,10</parameterseg>
        <avroschema>twitterschema.avsc</avroschema>
    </ingredient>

    <result>
        <connectordisplayname>Gmail</connectordisplayname>
        <connectorname>gmail</connectorname>
        <operation>Set Gmail Details</operation>
        <icon>gmail.png</icon>
        <parametersdisplayname>Subject,To</parametersdisplayname>
        <parametersname>subject,to</parametersname>
        <parameterseg>My Tweets,user@example.com</parameterseg>
        <avroschema>gssschema.avsc</avroschema>
    </result>


</metadata>
