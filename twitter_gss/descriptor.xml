<metadata>
    <overview>
        <name>Save Tweets in Spreadsheet</name>
        <version>1.0.0</version>
        <description>Find tweets for a given hash tag and save them in the Google Spreadsheet</description>
        <thumbnail>thumb.png</thumbnail>
        <banner>banner.png</banner>
    </overview>

    <ingredient>
        <connectordisplayname>Twitter</connectordisplayname>
        <connectorname>twitter</connectorname>
        <operation>Set Twitter Details</operation>
        <icon>twitter.png</icon>
        <parametersdisplayname>Hash tag, Language, Number of Result</parametersdisplayname>
        <parametersname>search,lang,count</parametersname>
        <parameterseg>happy,en,10</parameterseg>
        <avroschema>twitterschema.avsc</avroschema>
    </ingredient>

    <result>
        <connectordisplayname>Google Spreadsheet</connectordisplayname>
        <connectorname>googlespreadsheet</connectorname>
        <operation>Set Spreadsheet Details</operation>
        <icon>gss.png</icon>
        <parametersdisplayname>Spreadsheet Name, Work Sheet Name, Batch Enable, Batch Size</parametersdisplayname>
        <parametersname>spreadsheetName,worksheetName,batchEnable,batchSize</parametersname>
        <parameterseg>Tweets,Sheet1,true,100</parameterseg>
        <avroschema>schema.avsc</avroschema>
    </result>

</metadata>
